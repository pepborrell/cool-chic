n_samples: 500000
batch_size: 1
patch_size: [256, 256]
unfreeze_backbone: 10000
workdir: null
model_weights: /itet-stor/jborrell/net_scratch/cool-chic/results/exps/no-cchic/warmup-sweep/{lmbda_config_num}/__latest
disable_wandb: False
lmbda: {lambda_value}
user_tag: small-hn

recipe:
  preset_name: small delta hnet training
  warmup:
    empty: True # This is a placeholder for the warmup phase.
  all_phases:
    - lr: 1e-4
      max_itr: 1000000
      quantize_model: False
      schedule_lr: True
      end_lr: 1e-6
      softround_temperature: [0.3, 0.1]
      noise_parameter: [1.5, 1.0]
      quantizer_noise_type: "kumaraswamy"
      quantizer_type: "softround"
      patience: 1000
      freq_valid: 1000
      checkpointing_freq: 10000
      gradient_accumulation: 8

hypernet_cfg:
  synthesis:
    hidden_dim: 1024
    n_layers: 3
    biases: False
  arm:
    hidden_dim: 1024
    n_layers: 3
    biases: False
  upsampling:
    hidden_dim: 256
    n_layers: 1
  backbone_arch: small # Not taken into account for now.

  dec_cfg:
    config_name: hop
    arm: 16,2
    layers_synthesis: 48-1-linear-relu,X-1-linear-none,X-3-residual-relu,X-3-residual-none
    n_ft_per_res: 1,1,1,1,1,1,1
    ups_k_size: 8
    ups_preconcat_k_size: 7
